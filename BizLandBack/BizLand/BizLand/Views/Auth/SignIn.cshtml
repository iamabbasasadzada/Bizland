@model SignInVM

<div class="container " style="padding-top: 10% !important;">
    <form method="post" enctype="multipart/form-data" asp-action="SignIn">
        <div class="mb-3">
            <label asp-for="UsernameOrEmail" class="form-label"></label>
            <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username Or Email">
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" placeholder="Password">
        </div>

        <div class="mb-3" asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Sign In</button>
        </div>
    </form>
</div>
